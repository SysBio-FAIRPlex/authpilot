# Local Development Environment Configuration Template
# Copy this file to .env.local and customize as needed

# =============================================================================
# FAIRPLEX CLIENT CONFIGURATION
# =============================================================================
MY_PORT=8884
MY_HOST=http://localhost:8884

# =============================================================================
# HYDRA OAUTH2/OIDC SERVER CONFIGURATION
# =============================================================================
# Private URL: Used for internal service-to-service communication within Docker network
HYDRA_PRIVATE_URL=http://hydra:4444
# Public URL: Used for user-facing redirects and browser requests
HYDRA_PUBLIC_URL=http://localhost:4444
# Admin URL: Used for administrative operations
HYDRA_ADMIN_URL=http://hydra:4445
HYDRA_CLIENT_ID=FAIRplex
HYDRA_CLIENT_SECRET=secret

# =============================================================================
# KRATOS IDENTITY MANAGEMENT CONFIGURATION
# =============================================================================
KRATOS_PRIVATE_URL=http://kratos:4433
KRATOS_PUBLIC_URL=http://localhost:4433
KRATOS_ADMIN_URL=http://kratos:4434

# =============================================================================
# OAUTH CALLBACK CONFIGURATION
# =============================================================================
OAUTH_CALLBACK=http://localhost:8884/callback

# =============================================================================
# INTERNAL SERVICE URLs (Private/Docker Network)
# =============================================================================
AUTH_PILOT_TOKEN_EXCHANGE_PRIVATE_URL=http://fairplex-token-exchange:8000
AUTH_PILOT_TOKEN_EXCHANGE_URL=http://fairplex-token-exchange:8000/token-exchange

AMP_PD_DRS_PRIVATE_URI=http://auth-pilot-amp-pd-visa-issuer:7000
AMP_PD_DRS_URI=http://auth-pilot-amp-pd-visa-issuer:7000/drs/v1/objects/auth-pilot-test-data/test-data.txt

AUTH_PILOT_DATA_TRANSFER_PRIVATE_URL=http://auth-pilot-data-transfer:7100
AUTH_PILOT_DATA_TRANSFER_URL=http://auth-pilot-data-transfer:7100/transfer

# =============================================================================
# EXTERNAL/PUBLIC URLs
# =============================================================================
AMP_PD_DESTINATION_URI=gs://auth-pilot-test-data/download

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console -> APIs & Credentials -> OAuth 2.0 Client IDs
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id-here
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CSRF_COOKIE_NAME=__Host-ax-x-csrf-token
CSRF_COOKIE_SECRET=your-csrf-secret-here
COOKIE_SECRET=your-cookie-secret-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgres://hydra:secret@postgresd:5432/hydra?sslmode=disable
KRATOS_DATABASE_URL=postgres://kratos:secret@postgresd:5432/kratos?sslmode=disable

# =============================================================================
# LOGGING AND DEBUG
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug 